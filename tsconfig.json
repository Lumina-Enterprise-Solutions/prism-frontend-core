{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,

    // Bundler Mode
    "moduleResolution": "bundler",
    "resolveJsonModule": false,
    "allowArbitraryExtensions": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "types": ["vitest"]
  },
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}
